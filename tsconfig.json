{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ES2020", "DOM"],
    "outDir": "dist/esm",
    "declarationDir": "dist/esm",
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["@capacitor/core"]
  },
  "include": ["src/**/*"]
}
